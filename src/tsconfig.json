{
    "compilerOptions": {
        "outDir": "../js",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,

        "strict": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        ".",
        "../node_modules/@webgpu/types/**/*.d.ts"
    ]
}
